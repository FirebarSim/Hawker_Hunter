<Gauge Name="Fuel Panel" Version="1.3">
   <!--Saverio Maurri 2004-->
   <Image Name="fuel_panel_bg.bmp"/>
   <Element>
      <Select>
         <Value>(L:Fuel_gauge_LH, number) 1 == if{ (A:Fuel Tank Left Aux Level, part) 1540.8 * (&gt;L:Fuel_LH_gauge, number) } els{ (A:Fuel Tank Left Main Level, part) 1246.1 * (&gt;L:Fuel_LH_gauge, number) }
	</Value>
      </Select>
   </Element>
   <Element>
      <Select>
         <Value>(L:Fuel_gauge_RH, number) 1 == if{ (A:Fuel Tank Right Aux Level, part) 1540.8 * (&gt;L:Fuel_RH_gauge, number) } els{ (A:Fuel Tank Right Main Level, part) 1246.1 * (&gt;L:Fuel_RH_gauge, number) }
	</Value>
      </Select>
   </Element>
   <!--Gauges================-->
   <Element>
      <Position X="108" Y="110"/>
      <Image Name="fuel_gauge_needle.bmp" PointsTo="South">
         <Axis X="6" Y="14"/>
      </Image>
      <Rotate>
         <Value Minimum="0" Maximum="1400">(L:Fuel_LH_gauge, number)</Value>
         <Nonlinearity>
            <Item Value="0" X="67" Y="137"/>
            <Item Value="200" X="57" Y="103"/>
            <Item Value="600" X="99" Y="60"/>
            <Item Value="1000" X="157" Y="90"/>
            <Item Value="1300" X="159" Y="125"/>
            <Item Value="1400" X="154" Y="133"/>
            <Item Value="1541" X="148" Y="141"/>
         </Nonlinearity>
         <Delay DegreesPerSecond="30"/>
         <Failures>
            <SYSTEM_ELECTRICAL_PANELS Action="0"/>
            <GAUGE_FUEL_INDICATORS Action="Freeze"/>
         </Failures>
      </Rotate>
   </Element>
   <Element>
      <Position X="246" Y="111"/>
      <Image Name="fuel_gauge_needle.bmp" PointsTo="South">
         <Axis X="6" Y="14"/>
      </Image>
      <Rotate>
         <Value Minimum="0" Maximum="1400">(L:Fuel_RH_gauge, number)</Value>
         <Nonlinearity>
            <Item Value="0" X="203" Y="139"/>
            <Item Value="200" X="192" Y="106"/>
            <Item Value="600" X="235" Y="62"/>
            <Item Value="1000" X="294" Y="92"/>
            <Item Value="1400" X="291" Y="136"/>
            <Item Value="1541" X="285" Y="143"/>
         </Nonlinearity>
         <Delay DegreesPerSecond="30"/>
         <Failures>
            <SYSTEM_ELECTRICAL_PANELS Action="0"/>
            <GAUGE_FUEL_INDICATORS Action="Freeze"/>
         </Failures>
      </Rotate>
   </Element>
   <!--Booster Pumps============-->
   <Element>
      <Position X="81" Y="193"/>
      <Select>
         <Value>(A:General eng fuel pump switch:1, bool)</Value>
         <Case Value="0">
            <Image Name="Fuel_panel_switch_down.bmp"/>
         </Case>
         <Case Value="1">
            <Image Name="Fuel_panel_switch_up.bmp"/>
         </Case>
      </Select>
   </Element>
   <Element>
      <Position X="244" Y="195"/>
      <Select>
         <Value>(A:General eng fuel pump switch:1, bool)</Value>
         <Case Value="0">
            <Image Name="Fuel_panel_switch_down.bmp"/>
         </Case>
         <Case Value="1">
            <Image Name="Fuel_panel_switch_up.bmp"/>
         </Case>
      </Select>
   </Element>
   <Element>
      <Position X="49" Y="188"/>
      <Select>
         <Value>(A:General eng fuel pump switch:1, bool)</Value>
         <Case Value="0">
            <Image Name="Fuel_panel_amber_on.bmp" Bright="Yes"/>
         </Case>
      </Select>
   </Element>
   <Element>
      <Position X="293" Y="192"/>
      <Select>
         <Value>(A:General eng fuel pump switch:1, bool)</Value>
         <Case Value="0">
            <Image Name="Fuel_panel_amber_on.bmp" Bright="Yes"/>
         </Case>
      </Select>
   </Element>
   <!--Fuel Pressure eyes================-->
   <Element>
      <Position X="20" Y="223"/>
      <Select>
         <Value>(A:General Eng Fuel Pressure:1,psi) 4.5 &lt;</Value>
         <Case Value="1">
            <Image Name="Fuel_panel_pressure_eye_across.bmp"/>
         </Case>
      </Select>
   </Element>
   <Element>
      <Position X="305" Y="228"/>
      <Select>
         <Value>(A:General Eng Fuel Pressure:1,psi) 4.5 &lt;</Value>
         <Case Value="1">
            <Image Name="Fuel_panel_pressure_eye_across.bmp"/>
         </Case>
      </Select>
   </Element>
   <!--Drop Tank MIs==============-->
   <Element>
      <Position X="130" Y="211"/>
      <Select>
         <Value>(A:Fuel tank External1 Level,percent) 2 &lt;=</Value>
         <Case Value="1">
            <Image Name="Drop_tank_MI_empty.bmp"/>
         </Case>
      </Select>
   </Element>
   <Element>
      <Position X="195" Y="211"/>
      <Select>
         <Value>(A:Fuel tank External2 Level,percent) 2 &lt;=</Value>
         <Case Value="1">
            <Image Name="Drop_tank_MI_empty.bmp"/>
         </Case>
      </Select>
   </Element>
   <Mouse>
      <!--Left fuel gauge-->
      <Area Left="53" Top="58" Width="103" Height="50">
         <Tooltip> %((L:Fuel_gauge_LH, number))%{case}%{:1}Front %((A:Fuel Tank Left Aux Level, part) 1541 *)%!004d! %lbs% %{:0}Wing %((A:Fuel Tank Left Main Level, part) 1246.8 *)%!003d! %lbs% %{End}</Tooltip>
      </Area>
      <!--Right fuel gauge-->
      <Area Left="196" Top="58" Width="103" Height="50">
         <Tooltip> %((L:Fuel_gauge_RH, number))%{case}%{:1}Front %((A:Fuel tank Right Aux Level, part) 1541 *)%!004d! %lbs% %{:0}Wing %((A:Fuel Tank Right Main Level, part) 1246.8 *)%!003d! %lbs% %{End}</Tooltip>
      </Area>
      <!--Selector areas-->
      <Area Left="89" Top="128" Width="38" Height="33">
         <Tooltip>Click to change from wing to front or front to wing</Tooltip>
         <Cursor Type="Hand"/>
         <Click> (L:Fuel_gauge_LH, number) ! (&gt;L:Fuel_gauge_LH, number)</Click>
      </Area>
      <Area Left="227" Top="128" Width="38" Height="33">
         <Tooltip>Click to change from wing to front or front to wing</Tooltip>
         <Cursor Type="Hand"/>
         <Click> (L:Fuel_gauge_RH, number) ! (&gt;L:Fuel_gauge_RH, number)</Click>
      </Area>
      <!--Boost Pumps-->
      <Area Left="80" Top="193" Width="27" Height="54">
         <Tooltip>Port Booster Pump</Tooltip>
         <Cursor Type="Hand"/>
         <Click Event="TOGGLE_ELECT_FUEL_PUMP1"/>
      </Area>
      <Area Left="244" Top="193" Width="27" Height="54">
         <Tooltip>Stbd Booster Pump</Tooltip>
         <Cursor Type="Hand"/>
         <Click Event="TOGGLE_ELECT_FUEL_PUMP1"/>
      </Area>
   </Mouse>
</Gauge>
