<Gauge Name="ADF radio" Version="1.2">
   <!--2003 Saverio Maurri-->
   <Image Name="ADF_BG.bmp" ImageSizes="275,110"/>
   <Element>
      <Position X="91" Y="15"/>
      <Text X="91" Y="18" Length="6" Fixed="Yes" Font="arial" Adjust="Center" VerticalAdjust="Center" Color="#FBF9F0" Luminous="1">
         <String>%((A:Adf1 active frequency, KHz))%!06.1f!&lt;</String>
         <Failures>
            <SYSTEM_ELECTRICAL_PANELS Action="Freeze"/>
         </Failures>
      </Text>
   </Element>
   <Element>
      <Position X="20" Y="53"/>
      <Select>
         <Value>(A:ADF SOUND,bool) </Value>
         <Case Value="0">
            <Image Name="Toggle_switch_off.bmp"/>
         </Case>
         <Case Value="1">
            <Image Name="Toggle_switch_on.bmp"/>
         </Case>
      </Select>
   </Element>
   <Mouse>
      <Tooltip ID="TOOLTIPTEXT_ADF_FREQ"/>
      <Area Right="82" Left="61" Top="58" Bottom="102">
         <Cursor Type="DownArrow"/>
         <Click Event="ADF_100_DEC" Repeat="Yes"/>
      </Area>
      <Area Left="83" Right="105" Top="58" Bottom="102">
         <Cursor Type="UpArrow"/>
         <Click Event="ADF_100_INC" Repeat="Yes"/>
      </Area>
      <Area Right="136" Left="115" Top="58" Bottom="102">
         <Cursor Type="DownArrow"/>
         <Click Event="ADF_10_DEC" Repeat="Yes"/>
      </Area>
      <Area Left="137" Right="161" Top="58" Bottom="102">
         <Cursor Type="UpArrow"/>
         <Click Event="ADF_10_INC" Repeat="Yes"/>
      </Area>
      <Area Left="169" Right="191" Top="58" Bottom="102">
         <Cursor Type="DownArrow"/>
         <Click Event="ADF_1_DEC" Repeat="Yes"/>
      </Area>
      <Area Left="192" Right="215" Top="58" Bottom="102">
         <Cursor Type="UpArrow"/>
         <Click Event="ADF_1_INC" Repeat="Yes"/>
      </Area>
      <Area Left="21" Right="34" Top="61" Bottom="87">
         <Cursor Type="Hand"/>
         <Click Event="RADIO_ADF_IDENT_TOGGLE" Repeat="Yes"/>
      </Area>
   </Mouse>
</Gauge>
