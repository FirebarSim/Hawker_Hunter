<Gauge Name="Turn and Slip Indicator" Version="2.0">
   <!--Saverio Maurri 2004 (Hawker Hunter)-->
   <Image Name="Turn_Background.bmp" Luminous="1"/>
   <Element>
      <Image Name="Turn_Slip_Ball.bmp" Luminous="1">
         <Axis X="0" Y="0"/>
      </Image>
      <Shift>
         <Value Minimum="-1" Maximum="1">(A:Turn coordinator ball,position)</Value>
         <Nonlinearity>
            <Item Value="-1" X="30" Y="112"/>
            <Item Value="0" X="66" Y="119"/>
            <Item Value="1" X="102" Y="113"/>
         </Nonlinearity>
         <Delay PixelsPerSecond="25"/>
         <Failures>
            <GAUGE_TURN_COORDINATOR Action="Freeze"/>
         </Failures>
      </Shift>
   </Element>
   <Element>
      <Position X="77" Y="107"/>
      <Image Name="Turn_slip_Needle.bmp" Luminous="Yes" PointsTo="North">
         <Axis X="11" Y="93"/>
      </Image>
      <Rotate>
         <Value Minimum="-1.5" Maximum="1.5">(A:Delta heading rate,rpm)</Value>
         <Nonlinearity>
            <Item Value="-1.5" X="36" Y="31"/>
            <Item Value="-1" X="47" Y="25"/>
            <Item Value="-0.5" X="59" Y="22"/>
            <Item Value="0" X="77" Y="19"/>
            <Item Value="0.5" X="94" Y="21"/>
            <Item Value="-1" X="106" Y="25"/>
            <Item Value="-1.5" X="117" Y="31"/>
         </Nonlinearity>
         <Delay DegreesPerSecond="180"/>
         <Failures>
            <GAUGE_TURN_COORDINATOR Action="Freeze"/>
            <SYSTEM_ELECTRICAL_PANELS Action="0"/>
         </Failures>
      </Rotate>
   </Element>
   <Element>
      <Position X="37" Y="59"/>
      <Select>
         <Value>(A:Circuit general panel on,bool)</Value>
         <Case Value="0">
            <Image Name="Off_Flag.bmp" Luminous="1"/>
         </Case>
      </Select>
   </Element>
   <Mouse>
      <Tooltip ID="TOOLTIPTEXT_TURN_COORDINATOR_RATE"/>
   </Mouse>
</Gauge>
