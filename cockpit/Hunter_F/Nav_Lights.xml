<Gauge Name="Navigation Lights" Version="1.2">
   <Element>
      <Select>
         <Value>(A:Light nav,bool)</Value>
         <Case Value="0">
            <Image Name="Navpanel_switch_dwn.bmp" Luminous="1"/>
         </Case>
         <Case Value="1">
            <Image Name="Navpanel_switch_up.bmp" Luminous="1"/>
         </Case>
      </Select>
   </Element>
   <Mouse>
      <Tooltip ID="TOOLTIPTEXT_LIGHT_SWITCH_NAV"/>
      <Cursor Type="Hand"/>
      <Click Event="TOGGLE_NAV_LIGHTS"/>
   </Mouse>
</Gauge>
