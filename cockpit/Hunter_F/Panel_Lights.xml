<Gauge Name="Panel Lights" Version="1.0">
   <Element>
      <Select>
         <Value>(A:Light panel,bool)</Value>
         <Case Value="0">
            <Image Name="Navpanel_switch_dwn.bmp" Luminous="1"/>
         </Case>
         <Case Value="1">
            <Image Name="Navpanel_switch_up.bmp" Luminous="1"/>
         </Case>
      </Select>
   </Element>
   <Mouse>
      <Help ID="HELPID_GAUGE_LIGHT_SWITCH_PANEL"/>
      <Cursor Type="Hand"/>
      <Click Event="PANEL_LIGHTS_TOGGLE"/>
   </Mouse>
</Gauge>
