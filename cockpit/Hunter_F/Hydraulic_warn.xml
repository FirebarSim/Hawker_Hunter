<Gauge Name="Hydraulic Failure Warning Light" Version="1.0">
   <!-- Saverio Maurri 2004-->
   <Element>
      <Select>
         <Value>(A:Eng hydraulic pressure:1,psi) 9 &lt; </Value>
         <Case Value="1">
            <Image Name="Oil_press_warn_on.bmp" Bright="Yes"/>
         </Case>
      </Select>
   </Element>
   <Mouse>
      <Tooltip>Hydraulic Pressure Warning</Tooltip>
   </Mouse>
</Gauge>
