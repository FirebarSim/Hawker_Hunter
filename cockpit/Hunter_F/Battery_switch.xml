<Gauge Name="Battery switch" Version="1.0">
   <Element>
      <Select>
         <Value>(A:Electrical master battery,bool)</Value>
         <Case Value="0">
            <Image Name="SPST_DWN.bmp" Luminous="1"/>
         </Case>
         <Case Value="1">
            <Image Name="SPST_UP.bmp" Luminous="1"/>
         </Case>
      </Select>
   </Element>
   <Mouse>
      <Tooltip ID="TOOLTIPTEXT_BATTERY_SWITCH"/>
      <Cursor Type="Hand"/>
      <Click Event="TOGGLE_MASTER_BATTERY"/>
   </Mouse>
</Gauge>
