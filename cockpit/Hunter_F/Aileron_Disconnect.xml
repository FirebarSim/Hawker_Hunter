<Gauge Name="Aileron Disconnect Switch" Version="1.0">
   <!--Saverio Maurri 2004-->
   <Element>
      <Select>
         <Value>(L:Aileron_Power,bool)</Value>
         <Case Value="0">
            <Image Name="dp_switch_up.bmp"/>
         </Case>
         <Case Value="1">
            <Image Name="dp_switch_dwn.bmp"/>
         </Case>
      </Select>
   </Element>
   <Element>
      <Select>
         <Value>(L:Aileron_Power,bool) 1 == if{ 0 (&gt;K:AILERON_SET) }</Value>
      </Select>
   </Element>
   <Mouse>
      <Tooltip>Aileron Power Switch</Tooltip>
      <Cursor Type="Hand"/>
      <Click>(L:Aileron_Power,bool) ! (&gt;L:Aileron_Power,bool)</Click>
   </Mouse>
</Gauge>
