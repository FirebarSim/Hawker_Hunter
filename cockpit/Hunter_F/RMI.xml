<Gauge Name="RMI" Version="1.4">
   <!--Saverio Maurri 2004-->
   <Image Name="radio_compass_background.bmp"/>
   <!-- ======================= Compass Dial ======================= -->
   <Element>
      <Position X="71.125" Y="71.0625"/>
      <Image Name="radio_compass_ring.bmp" Luminous="1" PointsTo="East">
         <Axis X="64" Y="66"/>
      </Image>
      <Rotate>
         <Value>(A:Plane heading degrees gyro, radians) /-/</Value>
         <Failures>
            <GAUGE_GYRO_HEADING Action="Freeze"/>
         </Failures>
      </Rotate>
   </Element>
   <!-- =======================Red Needle ======================= -->
   <Element>
      <Position X="71.125" Y="71.0625"/>
      <Image Name="radio_compass_red_needle.bmp" Luminous="1">
         <Axis X="3.0625" Y=" 54.125"/>
      </Image>
      <Rotate>
         <Value>(A:ADF1 Radial,radians)</Value>
         <Failures>
            <SYSTEM_ELECTRICAL_PANELS Action="Freeze"/>
            <SYSTEM_ELECTRICAL_AVIONICS Action="Freeze"/>
            <GAUGE_GYRO_HEADING Action="Freeze"/>
            <GAUGE_ADF Action="Freeze"/>
         </Failures>
         <Delay DegreesPerSecond="180"/>
      </Rotate>
   </Element>
   <!-- ======================= Green Needle ======================= -->
   <Element>
      <Position X="71.0625" Y="71.25"/>
      <Image Name="radio_compass_green_needle.bmp" Luminous="1">
         <Axis X="54.25" Y="  6.0625"/>
      </Image>
      <Rotate>
         <Value>(A:NAV1 Radial,radians) (A:Plane heading degrees gyro,radians) - pi 2 /  +</Value>
         <Failures>
            <SYSTEM_ELECTRICAL_PANELS Action="Freeze"/>
            <SYSTEM_ELECTRICAL_AVIONICS Action="Freeze"/>
            <GAUGE_GYRO_HEADING Action="Freeze"/>
            <GAUGE_ADF Action="Freeze"/>
         </Failures>
         <Delay DegreesPerSecond="180"/>
      </Rotate>
   </Element>
   <!-- ======================= Highlight ========================== -->
   <Element>
      <Position X="0" Y="0"/>
      <Image Name="radio_compass_highlight.bmp" Alpha="Yes"/>
   </Element>
   <Mouse>
      <Help ID="HELPID_GAUGE_RMI"/>
      <Area Left="113" Top="12" Width="27" Height="27"/>
   </Mouse>
</Gauge>
